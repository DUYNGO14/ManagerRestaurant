@using Microsoft.AspNetCore.Components.Authorization
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ManagerRestaurant</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Roles="Admin">
            <Authorized >
                  <div class="nav-item px-3">
                        <NavLink class="nav-link" href="restaurants">
                            <span class="bi bi-list-nested" aria-hidden="true"></span> Restaurants Admin
                        </NavLink>
                    </div
                     <div class="nav-item px-3">
                        <NavLink class="nav-link" href="user">
                            <span class="bi bi-list-nested" aria-hidden="true"></span> User
                        </NavLink>
                    </div
            </Authorized>
           
        </AuthorizeView>
        <AuthorizeView Roles="Owner">
            <Authorized >
                  <div class="nav-item px-3">
                        <NavLink class="nav-link" href="restaurants">
                            <span class="bi bi-list-nested" aria-hidden="true"></span> Restaurants Owner
                        </NavLink>
                    </div>
            </Authorized>
        </AuthorizeView>

       
    </nav>
</div>
