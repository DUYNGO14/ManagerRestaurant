@page "/restaurants/{RestautantId:int}/dishes/{DishId:int}/update"
@rendermode InteractiveServer

<h3>Update Dish @Model.Name</h3>

<EditForm OnValidSubmit="Submit" FormName="UpdateDish" Model="Model">
    <DataAnnotationsValidator />

    <div class="container " style="max-width:880px">
        <div class="row mb-3">
            <div class="col-md-4">
                <label>Name dish</label>
                <InputText class="form-control" @bind-Value="Model.Name" />
                <ValidationMessage For="() => Model.Name" />
            </div>
            <div class="col-md-4">
                <label> Price</label>
                <InputNumber class="form-control" @bind-Value="Model.Price" />
                <ValidationMessage For="() => Model.Price" />
            </div>
            <div class="col-md-4">
                <label> Calo </label>
                <InputNumber class="form-control" @bind-Value="Model.KiloCalories" />
                <ValidationMessage For="() => Model.KiloCalories" />
            </div>
        </div>
        <div class="row mb-3">
            <label> Description</label>
            <InputTextArea class="form-control" @bind-Value="Model.Description" />
            <ValidationMessage For="() => Model.Description" />
        </div>
        <a class="btn btn-danger" href="/restaurants/@RestautantId/dishes">Back</a>
        <button class="btn btn-secondary" type="submit">Save</button>
    </div>
</EditForm>